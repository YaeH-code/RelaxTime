    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug", 
                "-dxdebug.start_with_request=yes", 
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "program": "", 
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": { 
                "uriFormat": "localhost:%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Debug current script in console",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        }
    ]
}